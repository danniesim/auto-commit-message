{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch via NPM",
        "request": "launch",
        "runtimeArgs": [
            "run-script",
            "dev",
            "${workspaceFolder}/tmp.txt"
        ],
        "runtimeExecutable": "npm",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node",
        "console": "integratedTerminal"
    },
    {
      "name": "Dev (Test Repo)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "ts-node",
        "${workspaceFolder}/src/cli.ts",
        "${workspaceFolder}/tmp.txt"
      ],
      "console": "internalConsole",
      "outputCapture": "std"
    }
  ]
}
